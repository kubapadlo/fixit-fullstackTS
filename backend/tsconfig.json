{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",          // Zmiana z "./src" na "./"
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.js",          
    "lib/**/*.ts",          
    "prisma.config.ts"       
  ],
  "exclude": ["node_modules", "dist"]
}